{
  "name": "react-library-starter",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "lib",
    "demo"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": "./dist/index.js",
    "./*": "./dist/*/index.js"
  },
  "scripts": {
    "dev": "tszip dev",
    "build": "tszip build",
    "demo": "yarn workspace demo build",
    "demo-dev": "yarn workspace demo dev",
    "lint": "eslint --fix src/**/*.ts"
  },
  "dependencies": {
    "@tszip/tszip": "3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint-plugin-react": "^7.28.0",
    "next": "latest",
    "react": "latest",
    "react-dom": "latest"
  },
  "devDependencies": {
    "@types/react": "17.0.38",
    "@types/react-dom": "latest",
    "autoprefixer": "10.4.2",
    "eslint": "8.6.0",
    "eslint-config-next": "^12.0.7",
    "postcss": "latest",
    "tailwindcss": "3.0.5",
    "typescript": "^4.5.4"
  }
}
